<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gepH1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:id="@+id/gepH2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:id="@+id/gepH3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Játékos"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/emberH3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:id="@+id/emberH2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:id="@+id/emberH1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Döntetlen körök száma: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/dontetlenDb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/botChoice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/rock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/userChoice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/rock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/koBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rock" />

            <Button
                android:id="@+id/papirBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/paper" />

            <Button
                android:id="@+id/olloBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/scissors" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>